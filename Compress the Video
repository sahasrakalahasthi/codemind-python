# cook your dish here
def result(i):
    n=int(input())
    l=list(map(int,input().split()))
    c=0
    for j in range(n):
        if(n==1):
            print(1)
            break
        else:
            for i in range(1,n):
                if(l[i-1]==l[i]):
                    c+=1
            
            print(n-c)
            break

t=int(input())
for i in range(t):
    result(i)
